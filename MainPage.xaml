            <PasswordBox x:Name="passwordBox" PlaceholderText="Parool:" Margin="0,0,0,0" RenderTransformOrigin="0.500,0.960" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Button x:Name="button1" Content="Logi sisse" Click="Button1_Click" HorizontalAlignment="Left" Height="40" Margin="400,0,0,0" VerticalAlignment="Center" Width="95"/>
        </StackPanel>
    </Grid>
